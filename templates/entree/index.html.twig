{% extends 'base.html.twig' %}

{% block title %} Liste Des Entree
{% endblock %}

{% block bodyContent %}

	<div class="main-panel">
		<div class="content-wrapper">
			<div class="row">
				<div class="col-lg-12 grid-margin stretch-card">
					<div class="card">
						<div class="card-body">
							<h4 class="card-title">Liste des Entrees</h4>
							<p class="card-description">
								Vous trouverez ici la liste des entrees
							</p>
							<div class="table-responsive">
								<table class="table table-hover">
									<thead>
										<tr>
											<th>Produit</th>
											<th>Date</th>
											<th>Quantite</th> 
                                            <th>Prix</th>
										</tr>
									</thead>
									<tbody>
										{% for entree in entrees %}
											<tr>
												<td>
													{{entree.produit.libelle}}
												</td>
												<td class="text-danger">
													{{entree.dateEntree|date('d M Y')}}
												</td>
												<td>
													{{entree.quantite}}
												</td>
                                                <td>
													{{entree.prix}}
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
	{% block addjs %}
		<script src="{{("template/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js")}}"></script>
	{% endblock %}