{% extends 'base.html.twig' %}

{% block title %}Ajout Categorie
{% endblock %}

{% block bodyContent %}
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="row">
				<div class="col-12 grid-margin">
					<div class="card">
						<div class="card-body">
							<h4 class="card-title">Ajouter une nouvelle sortie</h4>
							{{ form_start(sortieForm) }}
							<p class="card-description">
								Veuillez Replir les informations de sortie
                                {% if erreur is defined %}
                                    <br><span class="text-danger">{{erreur}}</span>
                                {% endif %}
							</p>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group row">
										<div class="col-sm-9">
											{{ form_row(sortieForm.quantite) }}
										</div>
									</div>
								</div>
                                <div class="col-md-6">
									<div class="form-group row">
										<div class="col-sm-9">
											{{ form_row(sortieForm.prix) }}
										</div>
									</div>
								</div>
							</div>
                            <div class="row">
								<div class="col-md-6">
									<div class="form-group row">
										<div class="col-sm-9">
											{{ form_row(sortieForm.dateSortie) }}
										</div>
									</div>
								</div>
                                <div class="col-md-6">
									<div class="form-group row">
										<div class="col-sm-9">
											{{ form_row(sortieForm.produit) }}
										</div>
									</div>
								</div>
							</div>
							<button type="submit" class="btn btn-primary me-2">Submit</button>
							{{ form_end(sortieForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}