{% extends 'base.html.twig' %}

{% block title %}Ajout Categorie
{% endblock %}

{% block bodyContent %}
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="row">
				<div class="col-12 grid-margin">
					<div class="card">
						<div class="card-body">
							<h4 class="card-title">Ajouter un nouvelle categorie</h4>
							{{ form_start(categorieForm) }}
							<p class="card-description">
								Veuillez ecrire le nom complet de la categorie sans abbrevation
							</p>
							<div class="row">
								<div class="col-md-12">
									<div class="form-group row">
										<div class="col-sm-9">
											{{ form_row(categorieForm.nom) }}
										</div>
									</div>
								</div>
								
							</div>
							
							
							


							

							<button type="submit" class="btn btn-primary me-2">Submit</button>
							{{ form_end(categorieForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}